spring:
  application:
    name: warm-calendar

  # MySQL Configuration (copy file này thành application.yml và điền thông tin)
  datasource:
    url: jdbc:mysql://YOUR_HOST:3306/YOUR_DATABASE
    username: YOUR_USERNAME
    password: YOUR_PASSWORD
    driver-class-name: com.mysql.cj.jdbc.Driver
    hikari:
      maximum-pool-size: 5
      minimum-idle: 2
      idle-timeout: 30000
      max-lifetime: 60000
      connection-timeout: 30000

  # JPA/Hibernate
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        format_sql: true

  # Google OAuth 2.0
  security:
    oauth2:
      client:
        registration:
          google:
            client-id: YOUR_GOOGLE_CLIENT_ID
            client-secret: YOUR_GOOGLE_CLIENT_SECRET
            scope: email,profile,openid

# Server
server:
  port: 8080

# JWT Configuration
jwt:
  secret: YOUR_JWT_SECRET_KEY_HERE
  expiration: 86400000
